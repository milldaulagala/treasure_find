<h1>Our Appraisers</h1>



  <images>
    <% @profiles.each do |profile| %>
      <div>
        <%= profile.first_name %><br/>
        <%= profile.last_name %><br/>
        <%= profile.address %><br/>
        <%= image_tag profile.image[:medium].url%><br/>
        
        <%= profile.introduction %><br/>
        <%= profile.mobile %><br/>
        <%= profile.category.name %><br/>
        <%= profile.user.email %><br/>
        <%= link_to 'Show', profile %><br/>
        
<% if policy(Profile).edit? %>
        <%= link_to 'Edit', edit_profile_path(profile) %><br/>
<% end %>

        
      </div>
    <% end %>
  </images>


<br>

