<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :profile_first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :profile_last_name %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address, id: :profile_address %>
  </div>


<div class="field">
    
    

    <%= form.label :image %>
    <%= form.hidden_field :image, value: @profile.cached_image_data %>
    <%= form.file_field :image, id: :profile_image_data %>
  </div>

  

  <div class="field">
    <%= form.label :introduction %>
    <%= form.text_area :introduction, id: :profile_introduction %>
  </div>

  <div class="field">
    <%= form.label :mobile %>
    <%= form.text_area :mobile, id: :profile_mobile %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.text_field :category_id, id: :profile_category_id %>
  </div>

  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
