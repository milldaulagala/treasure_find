<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :item_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :item_description %>
  </div>

  <div class="field">
    <%= form.label :condition %>
    <%= form.text_area :condition, id: :item_condition %>
  </div>

  <div class="field">
    <%= form.label :manufacture %>
    <%= form.text_area :manufacture, id: :item_manufacture %>
  </div>

  <div class="field">
    <%= form.label :manufacture_date %>
    <%= form.text_area :manufacture_date, id: :item_manufacture_date %>
  </div>

  
    
    
  

  <div class="field">
    <% if item.image.present? %>
    <%= image_tag item.image_url %>
    <% end %>

    <%= form.label :image %>
    <%= form.hidden_field :image, value: @item.cached_image_data %>
    <%= form.file_field :image, id: :item_image_data %>
  </div>

  <div class="field">
    <%= form.label :dimension %>
    <%= form.text_area :dimension, id: :item_dimension %>
  </div>

  <div class="field">
    <%= form.label :weight %>
    <%= form.text_field :weight, id: :item_weight %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, id: :item_user_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
